--echo #
--echo # Testing errors
--echo #
CREATE TABLE t1
(
  ID INT field_format=' %n%d%n'
) Engine=CONNECT table_type=FMT file_name='nonexistent.txt';
--replace_regex /on .*test.nonexistent.txt/on DATADIR\/test\/nonexistent.txt/

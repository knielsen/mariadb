!include ../my.cnf

[mysqld.1.1]
server-id= 1

[mysqld.2.1]
server-id= 1

[mysqld.1.slave]
server-id= 2
skip-slave-start

[mysqld.2.slave]
server-id= 2
log-bin
ndb_connectstring=	@mysql_cluster.slave.ndb_connectstring

[ENV]

SLAVE_MYPORT1=		@mysqld.2.slave.port
SLAVE_MYSOCK1=		@mysqld.2.slave.socket

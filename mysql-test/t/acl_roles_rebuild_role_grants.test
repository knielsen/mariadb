
create role r1;
create user u1;
grant r1 to u1;

#CHECK IF GRANTS ARE UPDATED ON GRANT
show grants for u1;

create user u2;

#CHECK THAT GRANTS ARE UPDATED ON ACL_USERS CHANGE
show grants for u1;
show grants for u2;
select * from mysql.roles_mapping;

revoke r1 from u1;
#TEST ERROR MESSAGE
--error ER_CANNOT_REVOKE_ROLE
revoke r1 from u1;
show grants for u1;
select * from mysql.roles_mapping;

grant r1 to u1;
#TEST ERROR MESSAGE
--error ER_CANNOT_GRANT_ROLE
grant r1 to u1;
show grants for u1;
select * from mysql.roles_mapping;

drop role r1;
show grants for u1;
select * from mysql.roles_mapping;

create role r1;
grant r1 to u1;
select * from mysql.roles_mapping;

drop user u1;
--error ER_NONEXISTING_GRANT
show grants for u1;
select * from mysql.roles_mapping;

drop role r1;
drop user u2;

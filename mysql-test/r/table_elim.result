1	SIMPLE	t1	ALL	NULL	NULL	NULL	NULL	4	
# Elimination when done within an outer join nest:
explain
select t0.*
from
t0 left join (t1 left join (t2 join t3 on t2.b=t3.b) on t2.a=t1.a and
t3.a=t1.a) on t0.a=t1.a;
